{% extends 'base.html.twig' %}
{% block title %}My account{% endblock %}
{% block main %}
 <!-- Breadcrumb Start -->
        <div class="breadcrumb-wrap">
            <div class="container">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path ('index') }}">Home</a></li>
                    <li class="breadcrumb-item active">My Account</li>
                </ul>
            </div>
        </div>
        <!-- Breadcrumb End -->
        
        
        <!-- My Account Start -->
        <div class="my-account">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                            <a class="nav-link" href="{{ path ('myaccount') }}">Dashboard</a>
                            <a class="nav-link" href="{{ path ('user_orders') }}">Orders</a>
                            <a class="nav-link active" href="{{ path ('user_carte_bancaire') }}">Payment Method</a>
                            <a class="nav-link" href="{{ path ('user_adresse') }}">Address</a>
                            <a class="nav-link" href="{{ path ('user_adresse_livraison') }}">Shipping address</a>
                           
                            <a class="nav-link" href="{{ path ('logout') }}">Logout</a>
                        </div>
                    </div>


                    <div class="col-md-9">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="address-tab" role="tabpanel" aria-labelledby="address-nav">
                                <h4>Payment Method</h4>
                                <div class="row">
                                    {% for carte in cartes %}
                                        <div class="col-md-6">
                                            <p>Titulaire: {{carte.Titulaire}}</p>
                                            <p>Numero de carte : {{carte.numeroCarte}}</p>
                                            <p>Numero de compte : {{carte.numeroCompte}}</p>
                                            <p>Date : {{carte.dateExpiration.format('d/m/y')}}</p>
                                            <p>Type : {{carte.typeMoyen}}</p>
                                        
                                            <p><a href="{{ path ('user_cb_remove', {id: carte.id}) }}"><button class="btn">remove</button></a></p>
                                        </div>
                                        
                                    {% endfor %}
                                  
                                    <div class="col-md-6">
                                        <a href="{{ path ('user_carte_bancaire') }}"><button class="btn">Add new card</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
 </div>
            </div>
        </div>
        <!-- My account address End -->
 {% endblock %}
