{% extends 'base.html.twig' %}
{% block title %}My account{% endblock %}
{% block main %}
 <!-- Breadcrumb Start -->
        <div class="breadcrumb-wrap">
            <div class="container">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path ('index') }}">Home</a></li>
                    <li class="breadcrumb-item active">My Account</li>
                </ul>
            </div>
        </div>
        <!-- Breadcrumb End -->
        
        
        <!-- My Account Start -->
        <div class="my-account">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                            <a class="nav-link" href="{{ path ('myaccount') }}">Dashboard</a>
                            <a class="nav-link active">Orders</a>
                            <a class="nav-link" href="{{ path ('user_carte_bancaire') }}">Payment Method</a>
                            <a class="nav-link" href="{{ path ('user_adresse') }}">Address</a>
                            <a class="nav-link" href="{{ path ('user_adresse_livraison') }}">Shipping address</a>
                            
                            <a class="nav-link" href="{{ path ('logout') }}">Logout</a>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="orders-tab" role="tabpanel" aria-labelledby="orders-nav">
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>No</th>
                                                        <th>Date</th>
                                                        <th>Price</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% set i = 0 %}
                                                    {% set numero = 1 %}
                                                    {% for item in commandes %}
                                                        {% if item.status == 'valide' %}
                                                        
                                                            <tr>
                                                                <td>{{numero}}</td>
                                                                <td>{{item.dateCommande.format('d/m/y')}}</td>
                                                                <td>{{ totaux[i] | number_format(2, ',','.') }} â‚¬</td>
                                                                <td>{{item.status}}</td>
                                                                <td><a href="{{ path ('user_order_details', {id: item.id}) }}"><button class="btn">View</button></a></td>
                                                            </tr>
                                                            {% set i = i + 1 %}
                                                            {% set numero = numero + 1 %}

                                                        {% endif %}
                                                    {% endfor %}

                                               

                                                    {# <pre>
                                                        {{ dump(totaux[0]) }}
                                                    </pre> #}
                                                    
                                                
                                                
                                                </tbody>
                                            </table>
                                        </div>
                            </div>
                        </div>
                    <div>
                </div>
            </div>
        </div>
        </div>
        </div>
        <!-- My account address End -->
 {% endblock %}