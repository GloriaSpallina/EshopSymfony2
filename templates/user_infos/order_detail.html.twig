{% extends 'base.html.twig' %}
{% block title %}My account{% endblock %}
{% block main %}
 <!-- Breadcrumb Start -->
        <div class="breadcrumb-wrap">
            <div class="container">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path ('index') }}">Home</a></li>
                    <li class="breadcrumb-item active">My Account</li>
                </ul>
            </div>
        </div>
        <!-- Breadcrumb End -->
        
        
        <!-- My Account Start -->
        <div class="my-account">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
                            <a class="nav-link" href="{{ path ('myaccount') }}">Dashboard</a>
                            <a class="nav-link" href="{{ path ('user_orders') }}" >Orders</a>
                            <a class="nav-link active">Order details</a>
                            <a class="nav-link" href="{{ path ('user_carte_bancaire') }}">Payment Method</a>
                            <a class="nav-link" href="{{ path ('user_adresse') }}">Address</a>
                            <a class="nav-link" href="{{ path ('user_adresse_livraison') }}">Shipping address</a>
                            
                            <a class="nav-link" href="{{ path ('logout') }}">Logout</a>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="orders-tab" role="tabpanel" aria-labelledby="orders-nav">
                                        <div class="table-responsive">
                                            <table class="table table-bordered">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>No</th>
                                                        <th>Product</th>
                                                        <th>Quantity</th>
                                                        <th>Price</th>
                                                        
                                                        
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    
                                                    {% set numero = 1 %}
                                                    {% for item in detail %}
                                                            <tr>
                                                                <td>{{numero}}</td>
                                                                <td>{{item.produit.nom}}</td>
                                                                <td>{{item.quantite}}</td>
                                                                <td>{{ (item.quantite * item.produit.prix) | number_format(2, ',','.') }} â‚¬</td>
                                                            </tr>
                                                          
                                                     {% set numero = numero + 1 %}

                                                    {% endfor %}

                                                </tbody>
                                            </table>
                                            
                                        </div>
                                        
                            </div>
                            
                        </div>
                        <div class="float-right">
                             <a href="{{ path ('user_orders') }}"><button class="btn">Back</button></a>
                        </div>
                    <div>
                </div>
            </div>
        </div>
        </div>
        </div>
        <!-- My account address End -->
 {% endblock %}