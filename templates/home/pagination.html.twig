{% if pageCount > 1 %}
    <ul class="pagination justify-content-center">
    {# {% if first is defined and current != first %}
        <li class="page-item disabled"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}">Previous</a></li>
    {% endif %} #}

    {% if previous is defined %}
        <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">Previous</a></li>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
        {% else %}
            <li class="active page-item"><a class="page-link">{{ page }} <span class="sr-only">(current)</span></a></li>
        {% endif %}
    {% endfor %}

    {% if next is defined %}
        <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">Next</a></li>
    {% endif %}

    {# {% if last is defined and current != last %}
        <li class="page-item"><a href="{{ path(route, query|merge({(pageParameterName): last})) }}">Next</a></li>
    {% endif %} #}
    </ul>
{% endif %}